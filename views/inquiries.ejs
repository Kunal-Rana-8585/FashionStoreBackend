<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inquiries</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            text-align: center;
            padding: 20px;
            background-color: #db3838;
            color: #fff;
            margin: 0;
            width: 100%;
        }

        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #db3838;
            color: #fff;
        }

        tbody tr:hover {
            background-color: #f5f5f5;
        }
    </style>
</head>

<body>
    <h1>Inquiries</h1>

    <table>
        <thead>
            <tr>
                <th>Inquiry ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Message</th>
                <th>Timestamp</th>
            </tr>
        </thead>
        <tbody>
            <% inquiries.forEach(inquiry => { %>
                <tr>
                    <td><%= inquiry.inquiry_id %></td>
                    <td><%= inquiry.name %></td>
                    <td><%= inquiry.email %></td>
                    <td><%= inquiry.phone_number %></td>
                    <td><%= inquiry.message %></td>
                    <td><%= inquiry.timestamp %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>

</html>
